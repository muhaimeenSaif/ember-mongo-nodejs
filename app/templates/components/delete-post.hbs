<style>
  .button1{
    background-color:#f44336;
    border-radius: 160px;
    color: white;
    padding:10px 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 12px;
    cursor: pointer;
  }
</style>


<button class="button1" {{action 'delete' post.title post}}>
  <i class="cancel icon"></i>
</button>


{{#ui-modal name=post.title class=post.title}}
  <div class="header">
    Please Confirm........
  </div>
  <br>
  <div style="float:left;padding-left:10px;">
    <p>Are you sure you want to delete?</p>
  </div>
  <br>
  <div class="actions">

    <div class="ui black deny button">
      No
    </div>
    <div class="ui positive right labeled icon button">
      Yes
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
